@model Book
@{
    ViewData["Title"] = "Book";
}
<h1>Register Book</h1>
<div asp-validation-summary="All" class="text-danger"></div>

<form asp-action="Create">
    <div class="mb-3">
        <label asp-for="BookName" class="form-label"></label>
        <input type="text" asp-for="BookName" class="form-control" />

        <label asp-for="Author" class="form-label"></label>
        <input type="text" asp-for="Author" class="form-control" />

        <label asp-for="Price" class="form-label"></label>
        <input type="text" asp-for="Price" class="form-control" />

        <span asp-validation-for="BookName" class="text-danger"></span>
        <span asp-validation-for="Author" class="text-danger"></span>
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Insert Data</button>

</form>

@section scripts {
    <partial name ="_ValidationScriptsPartial" />
}